
@{
    ViewBag.Title = "AllProduct";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@using MiniStop.Models
@using PagedList.Mvc
@model PagedList.PagedList<SanPham>

<div class="row">
    <div class="col-sm-12 p-0">
        <div class="category-title pt-1 text-center">
            <h5 class="text-uppercase pl-3">Tất cả sản phẩm <i class="fas fa-tags"></i></i></h5>
        </div>
    </div>
</div>


<div class="row mt-3">
    <!-- start menu side -->
    <div class="col-sm-2">
            <div class="row menu-dog scroll-none rounded pb-3">
                <div class="col-sm-12 rounded p-0">
                    @Html.Action("ListCategory", "Home")
                </div>
            </div>
        </div>
    <!-- end menu side -->
    <div class="col-sm-10 products">
        <div class="row flex-wrap">
            @foreach (var item in Model)
            {
            <div href="#" class="card col-sm-2 p-0 product border rounded-0">
                <a href="@Url.Action("Details", "Home", new { id = item.MaSP })" class="text-decoration-none">
                    <img class="card-img-top" src="~/Image/SanPham/@item.HinhAnh" alt="Card image cap">
                    <div class="card-body">
                        <h5 class="card-title">@item.TenSP</h5>
                    </div>
                </a>
                @if (item.GiamGia > 0)
                {
                    <div class="mt-2 pt-1">
                        <div class="ml-3 mb-3 text-dark font-weight-bold price">@String.Format("{0:0,0}", item.GiaBan) ₫</div>
                        <div class="ml-3 text-danger font-weight-bold price">@String.Format("{0:0,0}", item.GiaMoi) ₫ <div class="line"></div></div>
                        <button class="cart-plus text-warning bg-white border-0"><i class="fas fa-cart-plus"></i></button>
                    </div>
                }
                else
                {
                    <div class="mt-2 pt-1">
                        <div class="ml-3 mb-3 text-dark font-weight-bold price">@String.Format("{0:0,0}", item.GiaBan) ₫</div>
                        <button class="cart-plus text-warning bg-white border-0"><i class="fas fa-cart-plus"></i></button>
                    </div>
                }
                <a href="@Url.Action("Details", "Home", new { id = item.MaSP })" class="btn btn-dark btn-more-details">Xem chi tiết <i class="fas fa-info-circle"></i></a>
            </div>
            }
        </div>
        <div>
            <h4>@Html.PagedListPager(Model, page => Url.Action("AllProduct", new { page = page }))</h4> 
        </div>
    </div>
    <!-- end products --> 
</div>




